1. Print pattern which should print below
******
******
******
sol:
#include <bits/stdc++.h>
using namespace std;

int main(){
int n,m;
cin>>n;
cin>>m;

for(int i=1;i<=n;i++){
   for(int j=1;j<=6;j++){
   cout<<"*";
   }
   cout<<endl;
}
return 0;
}

2. To print below pattern
*****
*   *
*****
#include <bits/stdc++.h>
using namespace std;
int main() {
    // Write C++ code here
    int n,m;
    cin>>n>>m;
    for(int i=1;i<=n;i++){
        for (int j=1;j<=m;j++){
            if(i==1||j==1||i==n||j==m){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        cout<<endl;
    }

    return 0;
}
